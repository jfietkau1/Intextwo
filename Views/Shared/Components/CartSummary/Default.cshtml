@{
}
@model Cart

<div class="">

    <a class="btn btn-small btn-secondary navbar-btn" asp-page="/cart" asp-route-returnUrl="@Context.Request.Path">
        @if (Model.Lines.Count() > 0)
        {
            <small class="navbar-text">
                <b>Your Cart: </b>@Model.Lines.Sum(x => x.Quantity) item(s),
                @Model.CalculateTotal().ToString("c")

            </small>

        }
        else
        {
            <small>
                <b>Cart is empty</b>
            </small>
        }
    </a>
</div>