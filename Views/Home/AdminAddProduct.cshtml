@{
}
@{
    ViewData["Title"] = "Add Product";
}

@model Product


<div class="green-brick-small text-white"></div>
<div class="row p-4 rounded-3 bg-white shadow-sm item-border">
    <h1>Add a new product</h1>
    </hr>

    <form method="post">

        <input type="hidden" asp-for="product_ID"></input>

        <label asp-for="name">Product Name: </label>
        <input asp-for="name" />
        <br />
        <label asp-for="year">Product Year: </label>
        <input asp-for="year" />
        <br />
        <label asp-for="num_parts">Number of Parts: </label>
        <input asp-for="num_parts" />
        <br />
        <label asp-for="price">Price: </label>
        <input asp-for="price" />
        <br />
        <label asp-for="img_link">Image Link: </label>
        <input asp-for="img_link" />
        <br />
        <label asp-for="primary_color">Primary Color: </label>
        <input asp-for="primary_color" />
        <br />
        <label asp-for="secondary_color">Secondary Color: </label>
        <input asp-for="secondary_color" />
        <br />
        <label asp-for="description">Description: </label>
        <input asp-for="description" />
        <br />
        <label asp-for="category">Category: </label>
        <input asp-for="category" />
        <br />
        <br />

        <button class="btn add-cart-button rounded-pill" type="submit">Add Product</button>
    </form>
</div>
