@{
}

@model IQueryable<ApplicationUser>

<h1>User Management</h1>
<form action="/Identity/Account/Register" method="get">
    <button type="submit" class="btn btn-primary">Register</button>
</form>

<table id="userTable">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Customer ID</th>
            <th>Two Factor Enabled</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserName</td>
                <td>@u.PasswordHash</td>
                <td>@u.Id</td>
                <td>@u.TwoFactorEnabled</td>
                <td>
                    <!-- Add buttons for actions (Edit/Remove) -->
                <td><a class="btn btn-primary" asp-controller="Home" asp-action="EditUser" asp-route-id="@u.UserName">Edit</a></td>
                <td><a class="btn btn-alert" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@u.UserName">Delete</a></td>
            </tr>
        }
    </tbody>

</table>

