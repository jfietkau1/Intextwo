@{
}
@{
    ViewData["Title"] = "Orders";
}

@model OrderViewModel

<h2>View Order Information</h2>

    <div class="green-brick-small text-white"></div>
    <div class="green-border bg-white table-striped p-2 shadow rounded-3">
        <div class="row">
            <div class="col">
                <div class="text-center ">
                    <a class="btn add-cart-button rounded-pill" asp-controller="Home" asp-action="AdminProductList">Products</a>
                </div>
            </div>

            <div class="col">
                <form method="post">
                    <div class="text-center">
                        <a class="btn add-cart-button rounded-pill" asp-controller="Home" asp-action="AdminViewOrders">Orders</a>
                    </div>
                </form>
            </div>

            <div class="col">
                <form method="post">
                    <div class="text-center">
                        <a class="btn add-cart-button rounded-pill" asp-controller="Home" asp-action="AdminUpdateUser">Users</a>
                    </div>
                </form>
            </div>
    </div>

    <table class="table table-striped m-3">

        <thead>
            <tr>
                <th>Fraud?</th>
                <th>Customer Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Subtotal</th>
                <th>Bank</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.OrdersAndCustomers)
            {
                <tr>
                    <td>@x.fraud</td>
                    <td>@x.first_name @x.last_name</td>
                    <td>@x.gender</td>
                    <td>@x.age</td>
                    <td>@x.amount</td>
                    <td>@x.bank</td>
                    <td>@x.country_of_residence</td>
                </tr>
            }
        </tbody>

    </table>
    <div class="col-1 m-2 p-2">
        <h3>Pages:</h3>
        <hr />
        <div page-model="@Model.PaginationInfo" page-action="AdminViewOrders" page-class-enabled="true" page-class="btn bg-danger " page-class-normal="btn-outline-light text-light" page-class-selected="btn bg-white text-black" class="btn-group pull-right m-3 rounded-3 border border-danger ">Pages: </div>
    </div>
</div>








