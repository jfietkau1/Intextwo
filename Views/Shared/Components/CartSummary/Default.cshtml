@{
}
@model Cart

<div class="row justify-content-end">

    <a class="cart-box text-white" asp-page="/cart" asp-route-returnUrl="@Context.Request.Path">
        @if (Model.Lines.Count() > 0)
        {
            @* <div class="cart-logo absolute-center"></div> *@
            <small class="navbar-text absolute-center">
                <b>Your Cart: </b>@Model.Lines.Sum(x => x.Quantity) item(s),
                @Model.CalculateTotal().ToString("c")
            </small>

        }
        else
        {
            @* <small class="cart-logo absolute-center"></small> *@
            <small class="navbar-text absolute-center">
                <b>Cart is empty</b>
            </small>
        }
    </a>
</div>