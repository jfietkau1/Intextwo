@{
}
@{
    ViewData["Title"] = "Delete Product";
}

@model Product
<div class="row p-4 rounded-3 bg-white shadow-sm item-border">
    <h2>Are you sure you want to delete this product: <h3>@Model.name</h3></h2>

    <form asp-controller="Home" asp-action="DeleteProd" method="post">
        <input type="hidden" asp-for="product_ID" />
        <button class="btn add-cart-button rounded-pill" type="submit">Yes</button>
        <a class="btn btn-primary rounded-pill" asp-controller="Home" asp-action="CustProductList">No</a>
    </form>
</div>
