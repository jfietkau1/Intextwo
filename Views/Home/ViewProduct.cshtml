@{
}
@using Intextwo.Infrastructure
@model Product

<div class="col-md-4 mb-4">
    <div class="card">
        <a asp-controller="Home" asp-action="SeeProd" asp-route-id="@Model.product_ID" class="card-link">
            <img src="@Model.img_link" class="card-img-top" alt="Product Image">
            <div class="card-body">
                <h5 class="card-title">@Model.name</h5>
                <p class="card-text">Year: @Model.year</p>
                <p class="card-text">Number of Parts: @Model.num_parts</p>
                <p class="card-text">Price: @Model.price</p>
                <p class="card-text">Primary Color: @Model.primary_color</p>
                <p class="card-text">Secondary Color: @Model.secondary_color</p>
                <p class="card-text">Description: @Model.description</p>
                <p class="card-text">Category: @Model.category</p>
            </div>

        </a>
        <form method="post" asp-page="/Cart">
            <input type="hidden" name="productid" value="@Model.product_ID" />
            <input type="hidden" name="returnUrl" value="@Context.Request.PathAndQuery()" />
            <button type="submit" class="btn-success">+ Add to cart</button>

        </form>

    </div>
</div>



